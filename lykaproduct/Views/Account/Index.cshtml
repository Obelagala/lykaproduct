@model LPEntities.User
@{
    ViewBag.Title = "Index";
    Layout = "~/views/Shared/_logLayout.cshtml";
}
<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo">
                <img src="~/Content/images/logo.svg" alt="logo">
            </div>           
            @using (Html.BeginForm("Index", "Account", FormMethod.Post))
            {
                <div> <span class="text-warning">@Html.DisplayFor(m => m.Error)</span></div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @required = "required", @placeholder = "User Name" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-lg", @required = "required", @placeholder = "Password" })
                </div>
                <div class="mt-3">
                    <input type="submit" name="name" value="SIGN IN" class="btn btn-block btn-primary btn-lg" />
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <label class="form-check-label text-muted">
                            <input type="checkbox" class="form-check-input">
                            Keep me signed in
                        </label>
                    </div>
                    @Html.ActionLink("Forgot password", "Forgotpassword", "Account", new { area = "" }, new { @class = "auth-link text-black" })
                </div>
                <div class="mb-2">
                    <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                        <i class="ti-facebook mr-2"></i>Connect using facebook
                    </button>
                </div>
                <div class="text-center mt-4 font-weight-light">
                    Don't have an account? @Html.ActionLink("Create", "Register", "Account", new { area = "" }, new { @class = "text-primary" })
                </div>
            }

        </div>
    </div>
</div>
