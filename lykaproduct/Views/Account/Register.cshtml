@model LPEntities.User
@{
    ViewBag.Title = "Register";
    Layout = "~/views/Shared/_logLayout.cshtml";
}


<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo">
                <img src="~/Content/images/logo.svg" alt="logo">
            </div>
            <h4>New here?</h4>
            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
            @*<form class="pt-3">*@
            @using (Html.BeginForm("SaveUserDetails", "Account", FormMethod.Post, new { @class = "pt-3" }))
            {
                <div class="form-group">
                    @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control", @id = "exampleInputUsername1", @placeholder = "Full Name" })
                </div>
                <div class="form-group">
                    <b>Gender : </b>&nbsp;
                    @Html.RadioButtonFor(model => model.Gender, "Male")
                    Male
                    @Html.RadioButtonFor(model => model.Gender, "Female")
                    Female
                    @Html.RadioButtonFor(model => model.Gender, "Others")
                    Others
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "Email",@required = "required" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", @id = "txtPassword", @placeholder = "Password",@required = "required" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(Model => Model.ConfirmPassword, new { @class = "form-control", @id = "txtConfirmpass", @placeholder = "Confirm Password",@required = "required" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(Model => Model.PhoneNumber, new { @class = "form-control", @id = "txtphonenumber", @placeholder = "Phone Number",@required = "required"})
                </div>
                <div class="form-group">
                   @Html.DropDownListFor(Model => Model.CityName, new SelectList(Model.Citylist, "CityName", "CityName"), "--Select City", new { @class = "form-control form-control-lg" })
                
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(Model => Model.Address, new { @class = "form-control", @rows = "5", @placeholder = "Address Details", @required = "required" })
                  
                    </div>
                <div class="mb-4">
                    <div class="form-check">
                        <label class="form-check-label text-muted">
                            <input type="checkbox" class="form-check-input">
                            I agree to all Terms & Conditions
                        </label>
                    </div>
                </div>
                <div class="mt-3">
                    @*<a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">SIGN UP</a>*@
                    <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" name="saveUserDatails" value="Submit" />
                </div>
                <div class="text-center mt-4 font-weight-light">
                    Already have an account? @Html.ActionLink("Login", "Index", "Account", new { area = "" }, new { @class = "text-primary" })
                </div>
            }
            @*</form>*@
           
        </div>
    </div>
</div>
